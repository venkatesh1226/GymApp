<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="workOutName"
            android:textColor="@color/design_default_color_primary_dark"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/isAcomplished"
            app:layout_constraintStart_toStartOf="@+id/itemImage"
            app:layout_constraintTop_toTopOf="@+id/isAcomplished" />

        <ImageView
            android:id="@+id/isAcomplished"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_toRightOf="@+id/txtName"
            android:src="@drawable/ic_incomplete"
            app:layout_constraintBottom_toTopOf="@+id/itemImage"
            app:layout_constraintEnd_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/isAcomplished"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    >

</androidx.cardview.widget.CardView>
